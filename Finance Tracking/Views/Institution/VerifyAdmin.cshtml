@model Finance_Tracking.Models.Institution_Employee

@{
    ViewBag.Title = "VerifyAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Verify Admin</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <span class="text-danger">@ViewBag.Admin</span>
        <div class="form-group">
            @Html.LabelFor(model => model.Admin_Code, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Admin_Code, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Admin_Code, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="container-btn">
            <div class="left-btn-flex">
                <a href='@Url.Action("Index", "Institution")'>
                    <div>
                        <input type="button" name="selection" value="Cancel" class="btn btn-default" />
                    </div>
                </a>
            </div>
            <div class="right-btn-flex">
                <div>
                    <input type="submit" name="selection" value="Verify" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}