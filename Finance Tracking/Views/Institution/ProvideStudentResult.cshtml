@model Finance_Tracking.Models.Academic_Record

@{
    ViewBag.Title = "ProvideStudentResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Academic Record</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*<div class="form-group">
            @Html.LabelFor(model => model.Qualification, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Qualification, new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.Qualification, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.Avarage_Marks, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Avarage_Marks, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Avarage_Marks, "", new { @class = "text-danger" })
            </div>
        </div>
        <fieldset class="documents-fieldset">
            <legend class="documents-legend"> @Html.LabelFor(model => model.Upload_Transcript)</legend>
            <div class="form-group">
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Upload_Transcript, "", new { @type = "file", @multiple = "multiple" })
                    @Html.ValidationMessageFor(model => model.Upload_Transcript, "", new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>
        <div class="container-btn">
            <div class="left-btn-flex">
                <a href='@Url.Action("ViewEnrolledStudent", "Institution", new {id = Model.Student_Number})'>
                    <div>
                        <input type="button" name="selection" value="Cancel" class="btn btn-default" />
                    </div>
                </a>
            </div>
            <div class="right-btn-flex">
                <div>
                    <input type="submit" name="selection" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}