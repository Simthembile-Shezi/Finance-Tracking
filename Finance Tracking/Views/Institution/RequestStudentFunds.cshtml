@model Finance_Tracking.Models.Finacial_Record

@{
    ViewBag.Title = "RequestStudentFunds";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Request Student Funds</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Student_Number)

        <div class="form-group">
            @Html.LabelFor(model => model.Request_Funds, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Request_Funds, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Request_Funds, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="container-btn">
            <div class="left-btn-flex">
                <a href='@Url.Action("ViewFundedStudents", "Institution", new { id = Model.Student_Number })'>
                    <div>
                        <input type="button" name="selection" value="Cancel" class="btn btn-default" />
                    </div>
                </a>
            </div>
            <div class="right-btn-flex">
                <div>
                    <input type="submit" name="selection" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}