@model Finance_Tracking.Models.Institution

@{
    ViewBag.Title = "CreatePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Password</h2>
<p>Required information has a <span style="color:red;font-weight:bolder">*</span></p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <span class="text-danger">@ViewBag.RegistrationError</span>
        <fieldset class="documents-fieldset">
            <legend>Confirmation Code</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.Institution_Employee.Code, htmlAttributes: new { @class = "control-label col-md-2" }) <span style="color:red;font-weight:bolder">*</span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Institution_Employee.Code, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Institution_Employee.Code, "", new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>
        <fieldset class="documents-fieldset">
            <legend>Password</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.Institution_Employee.Password, htmlAttributes: new { @class = "control-label col-md-2" }) <span style="color:red;font-weight:bolder">*</span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Institution_Employee.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Institution_Employee.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Institution_Employee.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2" }) <span style="color:red;font-weight:bolder">*</span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Institution_Employee.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Institution_Employee.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Profile" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
