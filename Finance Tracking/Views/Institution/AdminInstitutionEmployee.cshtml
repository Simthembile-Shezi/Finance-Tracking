@model Finance_Tracking.Models.Institution_Employee

@{
    ViewBag.Title = "AddEmployeeProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Employee Profile</h2>
<p>Required information has a <span class="required">*</span></p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Employee</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <span class="text-danger">@ViewBag.UploadStatus</span>
        <span class="text-danger">@ViewBag.RegistrationError</span>

        <fieldset class="documents-fieldset">
            <legend>Personal details</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.Emp_FName, htmlAttributes: new { @class = "control-label col-md-3" }) <span class="required">*</span>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Emp_FName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Emp_FName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Emp_LName, htmlAttributes: new { @class = "control-label col-md-3" }) <span class="required">*</span>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Emp_LName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Emp_LName, "", new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>

        <fieldset class="documents-fieldset">
            <fieldset>Contacts details</fieldset>
            <div class="form-group">
                @Html.LabelFor(model => model.Emp_Telephone_Number, htmlAttributes: new { @class = "control-label col-md-3" }) <span class="required">*</span>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Emp_Telephone_Number, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Emp_Telephone_Number, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Emp_Email, htmlAttributes: new { @class = "control-label col-md-3" }) <span class="required">*</span>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Emp_Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Emp_Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmEmp_Email, htmlAttributes: new { @class = "control-label col-md-3" }) <span class="required">*</span>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.ConfirmEmp_Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ConfirmEmp_Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>

        <fieldset class="documents-fieldset">
            <legend>Organization</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.Organization_Name, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Organization_Name, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Organization_Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>
        <div class="container-btn">
            <div class="left-btn-flex">
                <a href='@Url.Action("RegisterInstitution", "Institution")'>
                    <div>
                        <input type="button" name="selection" value="Cancel" class="btn btn-default" />
                    </div>
                </a>
            </div>
            <div class="right-btn-flex">
                <div>
                    <input type="submit" name="selection" value="Next" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}