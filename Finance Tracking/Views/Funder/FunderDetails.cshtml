@model Finance_Tracking.Models.Funder

@{
    ViewBag.Title = "FunderDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Funder Details</h2>

<div class="col-md-8">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Funder_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Funder_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Funder_Tax_Number)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Funder_Tax_Number)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Funder_Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Funder_Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Funder_Telephone_Number)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Funder_Telephone_Number)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Funder_Physical_Address)
        </dt>

        <dd>
            <ul class="residential-address">
                <li>@Html.DisplayFor(model => model.Street_Name)</li>
                <li>@Html.DisplayFor(model => model.Sub_Town)</li>
                <li>@Html.DisplayFor(model => model.City)</li>
                <li>@Html.DisplayFor(model => model.Province)</li>
                <li>@Html.DisplayFor(model => model.Zip_Code)</li>
            </ul>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Funder_Postal_Address)
        </dt>

        <dd>
            <ul class="residential-address">
                <li>@Html.DisplayFor(model => model.Postal_box)</li>
                <li>@Html.DisplayFor(model => model.Town)</li>
                <li>@Html.DisplayFor(model => model.City_Post)</li>
                <li>@Html.DisplayFor(model => model.Province_Post)</li>
                <li>@Html.DisplayFor(model => model.Postal_Code)</li>
            </ul>
        </dd>

    </dl>
</div>
<div class="row col-md-4">
    <div class="btn-block">
        <a href='@Url.Action("ViewEmployees", "Funder")'>
            <input type="button" name="selection" value="Employees" class="btn btn-default btn-block" />
        </a>
    </div>
    <div class="btn-block">
        <a href='@Url.Action("MaintainFunder", "Funder")'>
            <input type="button" name="selection" value="Maintain Details" class="btn btn-default btn-block" />
        </a>
    </div>
    <div class="btn-block">
        <a href='@Url.Action("DeleteFunder", "Funder")'>
            <input type="button" name="selection" value="Delete Funder" class="btn btn-default btn-block" />
        </a>
    </div>
    <div class="btn-block">
        <a href='@Url.Action("Index", "Funder")'>
            <input type="button" name="selection" value="Dashboard" class="btn btn-default btn-block" />
        </a>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}