@model Finance_Tracking.Models.Application

@{
    ViewBag.Title = "ViewApplication";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Application</h2>

<div class="col-md-8">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Student_Identity_Number)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Student_Identity_Number)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Bursary_Code)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Bursary_Code)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Funding_Year)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Funding_Year)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Application_Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Application_Status)
        </dd>

    </dl>
</div>
<div class="row col-md-4">
    <div class="btn-block">
        <a href='@Url.Action("UpdateApplicationStatus", "Funder", new { id = Model.Application_ID })'>
            <div>
                <input type="button" name="selection" value="Update Application Status" class="btn btn-default btn-block" />
            </div>
        </a>
    </div>
    <div class="btn-block">
        <a href='@Url.Action("ViewBursaryAgreement", "Funder", new { id = Model.Application_ID })'>
            <div>
                <input type="button" name="selection" value="View Bursary Agreement" class="btn btn-default btn-block" />
            </div>
        </a>
    </div>
    <div class="btn-block">
        <a href='@Url.Action("ViewApplications", "Funder", new { id = Model.Bursary_Code })'>
            <div>
                <input type="button" name="selection" value="Back" class="btn btn-default btn-block" />
            </div>
        </a>
    </div>
</div>
