@model Finance_Tracking.Models.BursarsViewModel
@{
    ViewBag.Title = "ViewBursars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Bursars</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bursar_Fund.Student_Identity_Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bursar_Fund.Student_FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bursar_Fund.Student_LName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Bursars)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student_Identity_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student_FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student_LName)
            </td>
            <td>
                @Html.ActionLink("View Bursar", "ViewBursar", new { id = item.Application_ID })
            </td>
        </tr>
    }
</table>
<div class="container-btn">
    <div class="left-btn-flex">
        <a href='@Url.Action("ViewBursaries", "Funder")'>
            <div>
                <input type="button" name="selection" value="Back" class="btn btn-default" />
            </div>
        </a>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}