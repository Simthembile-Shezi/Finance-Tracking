                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Funder_Tax_Number, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Funder_Tax_Number, new { htmlAttributes = new { @class = "form-control", @id = "tax-number", @minlength = "10", @maxlength = "10", @oninput = "validatedTaxNr()" } })
                    @Html.ValidationMessageFor(model => model.Funder_Tax_Number, "", new { @class = "text-danger" })
                    <p id="invalid-TaxNr" class="field-validation-valid text-danger"></p>
                </div>
            </div>
        </fieldset>

