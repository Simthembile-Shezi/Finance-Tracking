@model Finance_Tracking.Models.Funder

@{
    ViewBag.Title = "RegisterFunder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register Funder</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

