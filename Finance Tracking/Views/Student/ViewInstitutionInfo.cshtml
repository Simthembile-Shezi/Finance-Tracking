@model Finance_Tracking.Models.Enrolled_At

@{
    ViewBag.Title = "ViewInstitutionInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Institution Information</h2>

<div class="col-md-8">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Student_Number)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Student_Number)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Institution_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Institution_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Qualification)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Qualification)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Student_Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Student_Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Street_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Street_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sub_Town)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sub_Town)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Province)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Province)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Zip_Code)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Zip_Code)
        </dd>
    </dl>
</div>

<div class="row col-md-4">

    <div class="btn-block">
        <a href='@Url.Action("ViewFinacialStatements", "Student", new { id = Model.Student_Number })'>
            <input type="button" name="selection" value="View Financial Statement" class="btn btn-default btn-block" />
        </a>
    </div>
    <div class="btn-block">
        <a href='@Url.Action("EditInstitutionInfo", "Student", new { id = Model.Student_Number })'>
            <input type="button" name="selection" value="Edit Institution Info" class="btn btn-default btn-block" />
        </a>
    </div>
    <div class="btn-block">
        <a href='@Url.Action("DeleteInstitutionInfo", "Student", new { id = Model.Student_Number })'>
            <input type="button" name="selection" value="Delete Institution Info" class="btn btn-default btn-block" />
        </a>
    </div>
    <div class="btn-block">
        <a href='@Url.Action("InstitutionInfo", "Student")'>
            <div>
                <input type="button" name="selection" value="Back" class="btn btn-default btn-block" />
            </div>
        </a>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
