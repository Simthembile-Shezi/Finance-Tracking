@model Finance_Tracking.Models.Enrolled_At

@{
    ViewBag.Title = "ViewInstitutionInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Institution Info</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Student_Number)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Student_Number)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Institution_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Institution_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Qualification)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Qualification)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Student_Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Student_Email)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Study_Residential_Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Study_Residential_Address)
        </dd>

    </dl>
</div>

<div class="row col-md-4">

    <div class="btn-block">
        <a href='@Url.Action("ViewFinacialStatement", "Student", new { id = Model.Student_Number })'>
            <input type="button" name="selection" value="View Statement" class="btn btn-default btn-block" />
        </a>
    </div>
    <div class="btn-block">
        <a href='@Url.Action("EditInstitutionInfo", "Student", new { id = Model.Student_Number })'>
            <input type="button" name="selection" value="Edit" class="btn btn-default btn-block" />
        </a>
    </div>
    <div class="btn-block">
        <a href='@Url.Action("DeleteInstitutionInfo", "Student", new { id = Model.Student_Number })'>
            <input type="button" name="selection" value="Delete" class="btn btn-default btn-block" />
        </a>
    </div>
    <div class="btn-block">
        <a href='@Url.Action("InstitutionInfo", "Student")'>
            <div>
                <input type="button" name="selection" value="Back" class="btn btn-default btn-block" />
            </div>
        </a>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
