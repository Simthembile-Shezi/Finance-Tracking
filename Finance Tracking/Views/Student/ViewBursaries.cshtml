@model Finance_Tracking.Models.ApplyBursaryViewModel

@{
    ViewBag.Title = "ViewBursaries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    @Html.AntiForgeryToken()
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bursary.Bursary_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bursary.Start_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bursary.Funder_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bursary.End_Date)
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model.Bursaries)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Bursary_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Start_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Funder_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End_Date)
                </td>
                <td>
                    @Html.ActionLink("Apply Now!", "ApplyForFunds", new { id = item.Bursary_Code })
                </td>
            </tr>
        }

    </table>
    <div class="container-btn">
        <div class="left-btn-flex">
            <a href='@Url.Action("Index", "Student")'>
                <div>
                    <input type="button" name="selection" value="Cancel" class="btn btn-default" />
                </div>
            </a>
        </div>
    </div>