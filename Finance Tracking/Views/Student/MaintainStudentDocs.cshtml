@model Finance_Tracking.Models.Student
@{
    ViewBag.Title = "MaintainStudentDocs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student Documentation</h2>

@using (Html.BeginForm("MaintainStudentDocs", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <span class="text-danger">@ViewBag.UploadStatus</span>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <fieldset class="documents-fieldset">
            <legend class="documents-legend"> @Html.LabelFor(model => model.Identity_Document)</legend>
            <div class="form-group">
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Identity_Document, "", new { @type = "file", @multiple = "multiple" })
                    @Html.ValidationMessageFor(model => model.Identity_Document, "", new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>
        <fieldset class="documents-fieldset">
            <legend class="documents-legend">@Html.LabelFor(model => model.Residential_Document)</legend>
            <div class="form-group">
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Residential_Document, "", new { @type = "file", @multiple = "multiple" })
                    @Html.ValidationMessageFor(model => model.Identity_Document, "", new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>

        <div class="form-group">
            <div class="container-btn">
                <div class="left-btn-flex">
                    <a href='@Url.Action("Index", "Student")'>
                        <div>
                            <input type="button" name="selection" value="Cancel" class="btn btn-default" />
                        </div>
                    </a>
                </div>
                <div class="right-btn-flex">
                    <div>
                        <input type="submit" name="selection" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>

    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
