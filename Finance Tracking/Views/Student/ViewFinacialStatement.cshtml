@model Finance_Tracking.Models.Finacial_Record

@{
    ViewBag.Title = "ViewFinacialStatement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Finacial Statement</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Student_Number)
    <div class="form-group row">
        <div class="col-md-6">
            @Html.LabelFor(model => model.Academic_Year, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Academic_Year, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Academic_Year, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-6">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
    <div form-group>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Balance_Amount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Balance_Amount)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Funding_Status)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Funding_Status)
            </dd>
        </dl>
    </div>
    <div class="form-group container-btn">
        <div class="left-btn-flex">
            <a href='@Url.Action("ViewInstitutionInfo", "Student", new { id = Model.Student_Number })'>
                <div>
                    <input type="button" name="selection" value="Cancel" class="btn btn-default" />
                </div>
            </a>
        </div>
    </div>
</div>
}

