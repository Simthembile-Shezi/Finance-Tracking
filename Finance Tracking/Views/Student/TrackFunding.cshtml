@model Finance_Tracking.Models.ApplyBursaryViewModel

@{
    ViewBag.Title = "TrackFunding";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Track Funding</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Application.Bursary_Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Application.Funding_Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Application.Application_Status)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model.Applications)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bursary_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funding_Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Application_Status)
            </td>
            <td>
                @Html.ActionLink("View Bursary Agreement", "ViewBursaryAgreement", new { id = item.Application_ID })
            </td>
        </tr>
    }

</table>
<div class="container-btn">
    <div class="left-btn-flex">
        <a href='@Url.Action("Index", "Student")'>
            <div>
                <input type="button" name="selection" value="Cancel" class="btn btn-default" />
            </div>
        </a>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}