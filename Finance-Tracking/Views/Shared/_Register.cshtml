@model Finance_Tracking.Models.FunderModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table>
            @RenderBody()
            <tr>
                <td class="col-next-btn">
                    <a href='@Url.Action("AddEmployee", "Employee")'>
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" name="selection" value="Next" class="btn btn-default" />
                        </div>
                    </a>
                </td>
                <td class="col-cancel-btn">
                    <a href='@Url.Action("Register", "Account")'>
                        <div class="col-md-offset-2 col-md-10">
                            <input type="button" name="selection" value="Cancel" class="btn btn-default" />
                        </div>
                    </a>
                </td>
            </tr>
        </table>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
